{
  "cSpell.language": "en,ru",
  /**
   * Better Default
   **/
  "editor.copyWithSyntaxHighlighting": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "window.newWindowDimensions": "inherit",
  "editor.snippetSuggestions": "top",
  "window.nativeFullScreen": false,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "workbench.sideBar.location": "right",
  "workbench.editor.showTabs": false,
  "editor.minimap.enabled": false,
  "editor.hover.enabled": false,
  "editor.matchBrackets": "never",
  "workbench.tips.enabled": false,
  "editor.colorDecorators": false,
  "workbench.startupEditor": "none",
  "editor.selectionHighlight": true,
  "editor.renderLineHighlight": "line",
  "editor.occurrencesHighlight": true,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  /**
   * Typography
   **/
  "editor.fontFamily": "Jetbrains Mono",
  "editor.fontSize": 12,
  "editor.fontWeight": "400",
  "editor.lineHeight": 0,
  "editor.suggestFontSize": 12,
  "editor.suggestLineHeight": 28,
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.lineHeight": 1,
  /**
   * Find
   **/
  "search.useIgnoreFiles": false,
  "search.exclude": {
    // Hide everything in /public, except "index.php"
    "**/public/{[^i],?[^n]}*": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/package-lock.json": true
  },
  /**
   * My OLD personal
   */
  "terminal.integrated.defaultProfile.osx": "zsh",
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[markdown]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "liveshare.authenticationProvider": "GitHub",
  "explorer.confirmDelete": false,
  "workbench.activityBar.visible": false,
  "workbench.colorTheme": "Firefox Dark",
  "window.titleBarStyle": "custom",
  "window.title": "${rootName} ${separator} ${rootName} ${activeEditorLong}",
  "customizeUI.titleBar": "regular",
  "customizeUI.stylesheet": {
    ".editor .title": "background: transparent !important;",
    // Hide top-right buttons
    // ".editor .title .actions-container .action-item a": "visibility: hidden;",
    // Change cursor color.
    ".monaco-editor .cursor": "background: linear-gradient(to bottom, #7f00ff, #e100ff) !important; color: #292D3E !important"
  },
  "cSpell.userWords": [
    "cfdeploy",
    "csrf",
    "Deno",
    "fastify",
    "fhir",
    "foldl",
    "FORGEROCK",
    "Meatlovers",
    "stas",
    "testdouble",
    "драйвить",
    "Недбайлов",
    "скилс",
    "фича",
    "фичи",
    "фулстак"
  ],
  "files.autoSave": "onFocusChange",
  "editor.inlineSuggest.enabled": true,
  "explorer.confirmDragAndDrop": false,
  "workbench.iconTheme": "material-icon-theme",
  "[json]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "cSpell.enabled": true,
  "[javascript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[haskell]": {},
  "amVim.useSystemClipboard": true,
  "editor.suggestSelection": "first",
  "editor.formatOnSave": true,
  "insertDateString.format": "YYYY-MM-DD",
  "haskell.formattingProvider": "none",
  "editor.wordWrap": "on",
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "window.zoomLevel": 1,
  "vsnotes.defaultNotePath": "/Users/venikman/notes"
}
